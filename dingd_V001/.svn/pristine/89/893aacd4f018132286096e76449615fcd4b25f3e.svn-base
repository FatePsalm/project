	 <!-- 根据场次查下下一辆需要拍卖的车辆 -->
	 <select id="getTCarBasisinfo" resultType="Map">
	   select o.id,o.retention_money retentionMoney,o.asking_price askingPrice,o.cars,o.car_model carModel,MAX(g.money) money,s.account from
	   auction_car r LEFT JOIN t_car_basisinfo o on r.car_id=o.id LEFT JOIN bidding g on g.car_id=r.car_id and g.auction_id=#{asid} LEFT JOIN a_user s on g.a_user_id=s.id 
	   where r.auction_id=#{asid} and o.car_state=#{status} GROUP BY r.car_id ORDER BY r.sort asc LIMIT 1
	 </select>
	 
	  <!-- 查询场次状态 -->
	 <select id="getAuctionId" resultType="Integer">
	   select id from auction_session where auction_state=#{status} ORDER BY auction_start desc limit 1
	 </select>
	 
     
	  <!-- 更改场次 -->
	 <update id="updAuctionOver" parameterType="cn.dingd.dd.common.entity.AuctionSessionEntity">  
      update auction_session  
      set auction_session.auction_state = #{status},
      auction_session.auction_over = #{date}
      where auction_session.id = #{asid}
     </update>
    
     
          <!-- 查询场次状态 -->
	 <select id="getAuctionStatus" resultType="Integer">
	   select auction_state from auction_session where auction_state=#{status} 
	 </select>
     
     <!-- 根据id获取车辆信息 -->
     <select id="getTCarBasisInfoID" resultType="cn.dingd.dd.common.view.TCarBasisInfoEntity"  resultMap="carbaInfoResultMap">
	    select s.*,p.url,p.dd_dict_id,p.img_type from (select c.*,COUNT(CASE WHEN recessive>1 THEN recessive ELSE null  END) as rcount
        from t_car_basisinfo c  left JOIN car_damage e on c.id=e.car_id where c.id =#{carId}) s  left JOIN car_picture p on s.id=p.car_id
	 </select>
	 
	 <!-- 查询总条数 -->
	 <select id="queryAuctionCarPage" resultType="Integer">
	   select count(*) from (select t.id  from
		 t_car_basisinfo t LEFT JOIN car_picture u on t.id=u.car_id and u.img_type=1 and u.dd_dict_id=9  	 LEFT JOIN auction_car r  on r.car_id=t.id LEFT JOIN auction_session s 
		 on r.auction_id=s.id LEFT JOIN bidding n on n.car_id=t.id and n.a_user_id=#{userId} where 1=1
		 <if test="status!=null and status==2">
		  and  s.auction_state&lt;=#{status} 
		  and  t.car_state in(2,6)
		  and date(s.auction_start)=date(#{dateStart})
		 </if>
		 <if test="status!=null and status==1">
		  and  s.auction_state=#{status}
		  and  t.car_state=6
		  and date(s.auction_start)&gt;date(#{dateStart})
		 </if>
		 GROUP BY r.car_id) a    
	 </select>
	 
	 <!-- 拍卖展示,拍卖中的 -->
	 <select id="showAuction" resultType="cn.dingd.dd.common.view.ShowAuctionDto">
	  	select car_name carName,cars,car_model carModel,asking_price askingPrice,url from
	  		 t_car_basisinfo t left join car_picture p 
	  		 	on t.id = p.car_id and p.img_type=1 and p.dd_dict_id= 9 
	  		 		where car_state = 2 ;
	 </select>
	 
	 <!-- 拍卖展示，未开拍的第一辆车 -->
	 <select id="getCarInfo" resultType="cn.dingd.dd.common.view.ShowAuctionDto">
	  	select  car_name carName,cars,car_model carModel,asking_price askingPrice,url from 
	  		t_car_basisinfo t left join car_picture p on t.id = p.car_id and p.img_type=1 and p.dd_dict_id= 9 
	  			where t.id = (select car_id from auction_car 
	  				where auction_id = (select id from auction_session where auction_start &gt; now() ORDER BY auction_start asc limit 1 ) ORDER BY sort asc limit 1);
	 </select>
