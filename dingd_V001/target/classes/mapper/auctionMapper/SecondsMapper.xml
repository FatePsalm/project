	<!-- /** 拍卖-秒杀-根据车辆id查找详细 */ public SecondKillBill findCarId(Integer carId); -->
	<select id="findCarId" resultType="cn.dingd.dd.common.entity.SecondKillBill">
		SELECT
		id,
		car_money as
		carMoney,
		server_money as serverMoney,
		start_time as startTime,
		create_time as createTime
		FROM
		seconds_kill
		WHERE
		DATE(start_time)= curdate()
		and
		car_id=#{carId}
		LIMIT
		1
	</select>
	<!-- /** 拍卖-秒杀-查询秒杀信息 */ public SecondKillBill findCarSeconds(@Param("carId")Integer 
		carId); -->
	<select id="findCarSeconds" resultType="cn.dingd.dd.common.entity.SecondKillBill">
		SELECT
		car_money as
		carMoney,
		server_money as serverMoney,
		start_time as startTime,
		create_time as createTime,
		car_id as carId
		FROM
		seconds_kill
		WHERE
		car_id=#{carId}
		and
		DATE_ADD(start_time,INTERVAL 1 MINUTE)
		> NOW()
	</select>
	<!-- /** 拍卖-秒杀-查询车辆详细 */ public Map<String, Object> findCarInfo(); -->
	<select id="findCarInfo" resultType="cn.dingd.dd.common.view.TCarBasisInfoEntity"
		resultMap="carbaInfoResultMap">
		SELECT
		s.*,
		p.url,
		p.dd_dict_id,
		p.img_type
		FROM
		(
		SELECT
		c.*,
		count( 1 ) AS rcount
		FROM
		t_car_basisinfo c
		LEFT JOIN
		car_damage e ON c.id = e.car_id
		WHERE
		c.id = #{carId}
		and
		c.car_state in(2,6)
		) s left JOIN
		car_picture p on s.id=p.car_id
	</select>
